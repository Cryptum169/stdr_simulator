<environment>
  <map>
    <filename>test_map.yaml</filename>
    <map_specifications>
      <image>map1.png</image>
      <resolution>0.02</resolution>
      <origin>
        <x>0.0</x>
        <y>0.0</y>
        <theta>0.0</theta>
      </origin>
      <free_thresh>0.196</free_thresh>
      <negate>0</negate>
      <occupied_thresh>0.6</occupied_thresh>
    </map_specifications>
  </map> 
  <robot> 
    <filename>simple_robot.yaml</filename>
    <robot_specifications>
      <pose>
        <x>1</x>
        <y>1</y>
        <theta>1</theta>
      </pose>
      <footprint>
        <filename>simple_footprint.yaml</filename>
        <footprint_specifications>
          <radius>3</radius>
          <points>
            <point>
                <x>0</x>
                <y>1</y>
            </point>
            <point>
                <x>1</x>
                <y>1</y>
            </point>
            <point>
                <x>1</x>
                <y>0</y>
            </point>
            <point>
                <x>0</x>
                <y>0</y>
            </point>
          </points>
        </footprint_specifications>
      </footprint>
      <laser>
        <filename>hokuyo.yaml</filename>
        <laser_specifications>
          <max_angle>1.57</max_angle>
          <min_angle>-1.57</min_angle>
          <max_range>30</max_range>
          <min_range>0.1</min_range>
          <num_rays>270</num_rays>
          <frequency>50</frequency>
          <frame_id>front_laser</frame_id>
          <pose>
            <x>0.1</x>
            <y>0</y>
            <theta>0</theta>
          </pose>
          <noise>
            <filename>gauss.yaml</filename>
            <noise_specifications>
              <mean>0.1</mean>
              <std>0.01</std>
            </noise_specifications>
          </noise>
        </laser_specifications>
      </laser>
      <sonar>
        <filename>sr05.yaml</filename>
        <sonar_specifications>
          <cone_angle>1</cone_angle>
          <max_range>30</max_range>
          <min_range>0.1</min_range>
          <frequency>50</frequency>
          <frame_id>front_sonar</frame_id>
          <pose>
            <x>0.1</x>
            <y>0</y>
            <theta>0</theta>
          </pose>
          <noise>
            <filename>gauss.yaml</filename>
            <noise_specifications>
              <mean>0.1</mean>
              <std>0.01</std>
            </noise_specifications>
          </noise>
        </sonar_specifications>
      </sonar>
      <rfid>
        <filename>rfid.yaml</filename>
        <rfid_specifications>
          <angle_span>1</angle_span>
          <signal_cutoff>1</signal_cutoff>
          <max_range>30</max_range>
          <frequency>50</frequency>
          <frame_id>front_rfid</frame_id>
          <pose>
            <x>0.1</x>
            <y>0</y>
            <theta>0</theta>
          </pose>
        </rfid_specifications>
      </rfid>
      <kinematic>
        <filename>simple_kinematic.yaml</filename>
        <kinematic_specifications>
          <type>gauss</type>
        </kinematic_specifications>
      </kinematic>
    </robot_specifications>
  </robot>
  <robot>
    <filename>simple_robot.yaml</filename>
    <robot_specifications>
      <initial_pose>
        <x>1</x>
        <y>2</y>
        <theta>6</theta>
      </initial_pose>
    </robot_specifications>
  </robot>
  <rfid_tag>
      <x>1</x>
      <y>1</y>
      <message>geia</message>
  </rfid_tag>
</environment>
